      /end-free
     p                 e
      *& STRDTE : Commencment Date ===================================
     p $STRDTE         b                   export
     d                 pi
     d  Event                         1
     d  oSTRDTE                        d
     d  nSTRDTE                        d
      *=====================================================
      /free
       monitor;
          //================================================
          if Event = '1'; // Insert
             nSTRDTE = %date();
          else;
             nSTRDTE = oSTRDTE;
          endif;
          //================================================
       on-error;
          ERR03();
       endmon;
      /end-free
     p                 e
      *& USERID : User Id ============================================
     p $USERID         b                   export
     d                 pi
     d  Event                         1
     d  oUSERID                      10
     d  nUSERID                      10
      *=====================================================
     d UserName        s             10    inz(*USER)
      *=====================================================
      /free
       monitor;
          //================================================
          nUSERID = UserName;
          //================================================
       on-error;
          ERR03();
       endmon;
      /end-free
     p                 e
