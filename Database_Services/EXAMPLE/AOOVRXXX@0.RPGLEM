     h nomain aut(*use)
      *===============================================================
      *& Validation Rules Repository - AA001
      * EXPORT SYMBOL($CUSTNO)     /* Customer Number               */
      * EXPORT SYMBOL($RECSTS)     /* Record Status                 */
      * EXPORT SYMBOL($CUSNME)     /* Customer Name                 */
      * EXPORT SYMBOL($ADRLN1)     /* Adress Line                   */
      * EXPORT SYMBOL($PSTCDE)     /* Post Code                     */
      * EXPORT SYMBOL($STRDTE)     /* Commencment Date              */
      * EXPORT SYMBOL($USERID)     /* User Id                       */
      *& Prototypes ==================================================
      /copy SRCAOO,ERR03#                        Move *DIAG and Resend *ESCAPE Messages
      /copy SRCAOO,ERR10#                        Send *DIAG Message
      /copy SRCAOO,ERR11#                        Send *ESCAPE Message
      *===============================================================
      /copy SRCAOO,$A6C6A2#                      CUSTNO : Customer Number
      /copy SRCAOO,$A6C6A3#                      RECSTS : Record Status
      /copy SRCAOO,$A6C6A4#                      CUSNME : Customer Name
      /copy SRCAOO,$A6C6A5#                      ADRLN1 : Address Line 1
      /copy SRCAOO,$A6C6A8#                      PSTCDE : Post Code
      /copy SRCAOO,$A6C6A9#                      STRDTE : Comencement Date
      /copy SRCAOO,$A6C6AC#                      USERID : Last User Id.
      *& Procedures ==================================================
      *& CUSTNO : Customer Number ====================================
     p $CUSTNO         b                   export
     d                 pi
     d  Event                         1
     d  oCUSTNO                      10i 0
     d  nCUSTNO                      10i 0
      *=====================================================
      /free
       monitor;
          //================================================
          if nCUSTNO = 0;
             ERR11('AOO001B':'ERRMSGF':'Customer Number');
          endif;
          //================================================
       on-error;
          ERR03();
       endmon;
      /end-free
     p                 e
      *& RECSTS : Record Status ======================================
     p $RECSTS         b                   export
     d                 pi
     d  Event                         1
     d  oRECSTS                       2
     d  nRECSTS                       2
      *=====================================================
      /free
       monitor;
          //================================================
          nRECSTS = '  ';
          //================================================
       on-error;
          ERR03();
       endmon;
      /end-free
     p                 e
      *& CUSNME : Customer Name ======================================
     p $CUSNME         b                   export
     d                 pi
     d  Event                         1
     d  oCUSNME                      30
     d  nCUSNME                      30
      *=====================================================
      /free
       monitor;
          //================================================
          if nCUSNME = *blank;
             ERR11('AOF001A':'ERRMSGF':'Customer Name');
          endif;
          //================================================
       on-error;
          ERR03();
       endmon;
      /end-free
     p                 e
